<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".agendamedico">

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/medico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Pedro Alvez"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barbeiro"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/medico"
        app:layout_constraintTop_toBottomOf="@+id/medico" />

    <ImageButton
        android:id="@+id/voltar"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:translationX="10dp"
        android:translationY="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:background="@drawable/barbeiro"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voltar"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Manhã"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="100dp">

            <RadioGroup
                android:id="@+id/horas1"
                android:layout_width="370dp"
                android:layout_height="100dp"
                android:translationX="15dp">

                <RadioButton
                    android:id="@+id/horas8"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 8:00"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/horas830"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 8:30 "
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/horas9"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 09:00"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="100dp"
                    android:translationY="-100dp" />

                <RadioButton
                    android:id="@+id/horas930"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 09:30"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="100dp"
                    android:translationY="-100dp" />

                <RadioButton
                    android:id="@+id/horas10"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 10:00"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="200dp"
                    android:translationY="-200dp" />

                <RadioButton
                    android:id="@+id/horas130"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 10:30"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="200dp"
                    android:translationY="-200dp" />

                <RadioButton
                    android:id="@+id/horas11"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 11:00"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="300dp"
                    android:translationY="-300dp" />

                <RadioButton
                    android:id="@+id/horas1130"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 11:30"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="300dp"
                    android:translationY="-300dp" />
            </RadioGroup>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView26"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Tarde"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="100dp">

            <RadioGroup
                android:layout_width="370dp"
                android:layout_height="100dp"
                android:translationX="15dp">

                <RadioButton
                    android:id="@+id/horas12"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 12:00"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/horas1230"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 12:30"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/horas13"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 13:00"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="100dp"
                    android:translationY="-100dp" />

                <RadioButton
                    android:id="@+id/horas1330"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 13:30"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="100dp"
                    android:translationY="-100dp" />

                <RadioButton
                    android:id="@+id/horas14"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 14:00"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="200dp"
                    android:translationY="-200dp" />

                <RadioButton
                    android:id="@+id/horas1430"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 14:30"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="200dp"
                    android:translationY="-200dp" />

                <RadioButton
                    android:id="@+id/horas15"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 15:00"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="300dp"
                    android:translationY="-300dp" />

                <RadioButton
                    android:id="@+id/horas1530"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/radioselector1"
                    android:button="@android:color/transparent"
                    android:text=" 15:30"
                    android:textAlignment="center"
                    android:textColor="@drawable/textcolor"
                    android:textSize="20dp"
                    android:translationX="300dp"
                    android:translationY="-300dp" />
            </RadioGroup>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/botao1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext2"
        android:text="Fazer agendamento"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Escolha o dia"
        android:textSize="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login"
        android:src="@drawable/calendario1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Calendário"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton3"
        app:layout_constraintEnd_toEndOf="@+id/imageButton3"
        app:layout_constraintStart_toStartOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>